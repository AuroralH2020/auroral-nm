{
  "name": "nodejs-ts-starter",
  "version": "1.6.3",
  "description": "Base for future ts projects",
  "main": "server.js",
  "scripts": {
    "start": "node ./dist/src/server.js",
    "build": "tsc",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "jest --watch",
    "sonar": "node sonar-client.js",
    "build:watch": "tsc -w",
    "start:watch": "nodemon ./dist/src/server.js",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "prod": "concurrently \"npm run build\" \"npm run start\""
  },
  "author": "Jorge Almela",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.9",
    "@types/cron": "^1.7.3",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/got": "^9.6.11",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mustache": "^4.1.1",
    "@types/nodemailer": "^6.4.1",
    "@types/stoppable": "^1.1.0",
    "@types/uuid": "^8.3.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^27.5.1",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.7",
    "sonarqube-scanner": "^2.8.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.17.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "elastic-apm-node": "^3.26.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "got": "^11.8.1",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.9",
    "mustache": "^4.2.0",
    "nodemailer": "^6.6.0",
    "qs": "^6.9.6",
    "stoppable": "^1.1.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__mocks__/",
      "/__tests__/",
      "/scripts/",
      "/coverage/"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
